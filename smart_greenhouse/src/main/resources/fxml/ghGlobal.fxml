<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <HBox alignment="CENTER" spacing="10">
            <HBox>
                <Label fx:id="locationLabel" text="Location: ">
                    <font>
                        <Font name="System Bold"/>
                    </font>
                </Label>
                <Label fx:id="setLocationLabel" text="default"/>
            </HBox>
            <HBox>
                <Label fx:id="dayLabel" text="Day: ">
                    <font>
                        <Font name="System Bold"/>
                    </font>
                </Label>
                <Label fx:id="setDayLabel" text="default"/>
            </HBox>
            <HBox>
                <Label fx:id="temperatureLabel" text="Temperature: ">
                    <font>
                        <Font name="System Bold"/>
                    </font>
                </Label>
                <Label fx:id="setTemperatureLabel" text="default"/>
            </HBox>
            <HBox>
                <Label fx:id="humidityLabel" text="Humidity: ">
                    <font>
                        <Font name="System Bold"/>
                    </font>
                </Label>
                <Label fx:id="setHumidityLabel" text="default"/>
            </HBox>
            <HBox>
                <Label fx:id="brightnessLabel" text="Brightness: ">
                    <font>
                        <Font name="System Bold"/>
                    </font>
                </Label>
                <Label fx:id="setBrightnessLabel" text="default"/>
            </HBox>


            <BorderPane.margin>
                <Insets bottom="30.0"/>
            </BorderPane.margin>
        </HBox>
    </top>

    <bottom>
        <VBox>
            <HBox alignment="CENTER">
                <Label fx:id="timeLabel" text="Time: ">
                    <font>
                        <Font name="System Bold" size="30.0" />
                    </font>
                </Label>

                <Label id="timeElapsedLabel" fx:id="timeElapsedLabel">
                    <font>
                        <Font name="System Bold" size="30.0" />
                    </font>
                </Label>
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <Label fx:id="timeSpeedLabel" text="Time speed">
                    <font>
                        <Font name="System Bold"/>
                    </font>
                </Label>
                <Slider id="timeSpeedSlider" fx:id="timeSpeedSlider" showTickMarks="true" showTickLabels="true" min="1" max="10" majorTickUnit="1" minorTickCount="0" snapToTicks="true"> </Slider>
            </HBox>

            <BorderPane.margin>
                <Insets top="30.0" />
            </BorderPane.margin>
        </VBox>
    </bottom>
</BorderPane>