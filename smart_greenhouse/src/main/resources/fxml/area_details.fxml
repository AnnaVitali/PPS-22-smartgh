<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" hbarPolicy="NEVER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
            styleClass="transparentPane" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0"
          stylesheets="@../css/baseStyle.css">
        <HBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="20.0"
              VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets/>
            </VBox.margin>
            <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="NEVER">
                <Image url="https://opb-img.plantbook.io/citrus%20limon.jpg"/>
            </ImageView>
            <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
                <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                    <Label maxWidth="1.7976931348623157E308" text="Zone Information:" HBox.hgrow="ALWAYS">
                        <font>
                            <Font name="System Bold" size="18.0"/>
                        </font>
                    </Label>
                    <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0">
                        <HBox.margin>
                            <Insets left="5.0" right="5.0"/>
                        </HBox.margin>
                        <Label maxWidth="1.7976931348623157E308" text="Timer"/>
                        <Label maxWidth="1.7976931348623157E308" text="00:00:00"/>
                    </HBox>
                </HBox>
                <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0">
                    <Label maxWidth="1.7976931348623157E308" styleClass="titleText" text="Plant name:"/>
                    <Label fx:id="plantNameLabel" maxWidth="1.7976931348623157E308" styleClass="normalText"
                           text="Label"/>
                </HBox>
                <Label maxWidth="1.7976931348623157E308" styleClass="titleText" text="Description:"
                       VBox.vgrow="ALWAYS"/>
                <Label fx:id="plantDescriptionLabel" maxWidth="1.7976931348623157E308" styleClass="descriptionText"
                       text="The lemon (Citrus limon) is a species of small evergreen trees in the flowering plant family Rutaceae, native to Asia, primarily Northeast India (Assam), Northern Myanmar or China.The tree's ellipsoidal yellow fruit is used for culinary and non-culinary purposes throughout the world, primarily for its juice, which has both culinary and cleaning uses. The pulp and rind are also used in cooking and baking. The juice of the lemon is about 5% to 6% citric acid, with a pH of around 2.2, giving it a sour taste. The distinctive sour taste of lemon juice makes it a key ingredient in drinks and foods such as lemonade and lemon meringue pie."
                       wrapText="true" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets right="5.0"/>
                    </VBox.margin>
                </Label>
            </VBox>
        </HBox>
        <VBox alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308">
            <HBox spacing="5.0">
                <Label styleClass="titleText" text="State:"/>
                <Label styleClass="normalText" text="State"/>
            </HBox>
            <Pane maxHeight="1.7976931348623157E308" styleClass="alarmPane">
                <Label maxHeight="1.7976931348623157E308" styleClass="errorText"
                       text="Regulate brightness: increase lamp brightness" wrapText="true"/>
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </padding>
                <VBox.margin>
                    <Insets top="2.0"/>
                </VBox.margin>
            </Pane>
        </VBox>
        <VBox fx:id="parametersVbox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
            <GridPane alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" percentWidth="20.0"/>
                    <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" percentWidth="20.0"/>
                    <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints maxHeight="1.7976931348623157E308" vgrow="ALWAYS"/>
                </rowConstraints>
                <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="titleText"
                       text="Parameters (optimal value)"/>
                <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="titleText"
                       text="Current Value" GridPane.columnIndex="1"/>
                <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="titleText"
                       text="Operations" GridPane.columnIndex="2"/>
            </GridPane>
        </VBox>
    </VBox>
</ScrollPane>
